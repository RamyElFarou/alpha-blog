<h1 align = "center"> <%= "Category: " + @category.name %></h1>

<div align = "center">
  <% if logged_in? && current_user.admin? %>
    <div class ="row">
      <span class = "badge"><%= link_to "Edit category name", edit_category_path(@category) %> </span>
    </div>
  <% end %>
  <%= will_paginate @category_articles %> <!-- displays the page navigation -->
</div>

<%= render 'articles/article', obj: @category_articles %> <!-- _article is a generic partial, so we need to pass the object -->
<div align = "center">
  <%= will_paginate @category_articles %>
</div>