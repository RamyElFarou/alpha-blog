<h1 align = "center">Login</h1> <!-- not a model back form, form_for wont know what route to creato for you -->

   <%= form_for(:session, :html => {class: "form-horizontal", roll: "form"}, url: login_path) do |f| %>
          <div class = "form-group">       <!-- form for title -->
              <div class = "control-label col-sm-2">
                <%= f.label :email %>
              </div>
              <div class = "col-sm-8">
                 <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus:true %>
              </div>
          </div>

            <div class = "form-group">      <!-- form for description -->
              <div class = "control-label col-sm-2">
                <%= f.label :password %>
            </div>
             <div class = "col-sm-8">
              <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
             </div>
          </div>

          <div class = "form-group">     <!-- form for button -->
            <div class ="col-sm-offset-2 col-sm-8">
               <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
          <% end %>
           <div class = "cancel-request col-xs-4 col-xs-offset-4">
          [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
           </div>