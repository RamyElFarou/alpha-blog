<!-- form is a model back form so copy form partial from articles -->

<h1 align = "center">Signup for Alpha Blog </h1>

<%= render 'shared/errors', obj: @user %>

  <div class ='row'>
    <div class = 'col-xs-12'> <!-- Spans all 12 columns of the grid -->
      <%= form_for(@user, :html => {class: "form-horizontal", roll: "form"}) do |f| %>
      <div class = "form-group">       <!-- form for title -->
          <div class = "control-label col-sm-2">
            <%= f.label :username %>
          </div>
          <div class = "col-sm-8">
             <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus:true %>
          </div>
      </div>
      <div class = "form-group">      <!-- form for description -->
          <div class = "control-label col-sm-2">
            <%= f.label :email %>
        </div>
         <div class = "col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus:true %>
         </div>
      </div>

           <div class = "form-group">      <!-- form for description -->
          <div class = "control-label col-sm-2">
            <%= f.label :password %>
        </div>
         <div class = "col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus:true %>
         </div>
      </div>

      <div class = "form-group">     <!-- form for button -->
        <div class ="col-sm-offset-5 col-sm-10">
           <%= f.submit "Signup", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      <% end %>
       <div class = "cancel-request col-xs-4 col-xs-offset-4">
      [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
       </div>
    </div>
  </div>