<%= render 'shared/errors', obj: @article %>

  <div class ='row'>
    <div class = 'col-xs-12'> <!-- Spans all 12 columns of the grid -->
      <%= form_for(@article, :html => {class: "form-horizontal", roll: "form"}) do |f| %>
      <div class = "form-group">       <!-- form for title -->
          <div class = "control-label col-sm-2">
            <%= f.label :title %>
          </div>
          <div class = "col-sm-8">
             <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus:true %>
          </div>
      </div>
      <div class = "form-group">      <!-- form for description -->
          <div class = "control-label col-sm-2">
            <%= f.label :description %>
        </div>
          <div class = "col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article", autofocus:true%>
          </div>
      </div>

      <div class = "form-group">     <!-- form for button -->
        <div class = "row">
          <div class ="col-sm-offset-2 col-sm-8">
           <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
             <% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text} %>
           <% end %>
          </div>
        </div>
      </div>

      <div class = "form-group">     <!-- form for button -->
        <div class ="col-sm-offset-5 col-sm-10">
           <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      <% end %>
       <div class = "cancel-request col-xs-4 col-xs-offset-4">
      [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
       </div>
    </div>
  </div>